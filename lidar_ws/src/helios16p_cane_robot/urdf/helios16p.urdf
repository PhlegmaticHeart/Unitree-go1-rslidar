<?xml version="1.0"?>
<robot name="botte">
  <!-- Link principale -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.065 0.12 0.05"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="-0.0325 0 0.025" rpy="0 0 0"/>
    </visual>
  </link>
<!-- parte curva montata sul link principale-->
  <link name="base_round_part">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.05"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>
   <joint name="base_round_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="base_round_part"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
  </joint>

  <link name="top_link">
    <visual>
      <geometry>
        <box size="0.065 0.12 0.01"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="-0.0325 0 0" rpy="0 0 0"/>
    </visual>
  </link>
  <joint name="top_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="top_link"/>
    <origin xyz="0 0 0.145" rpy="0 0 0"/>
  </joint>
<!-- parte curva montata sul link principale-->
  <link name="top_round_part">
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.01"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
  </link>
   <joint name="top_round_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="top_round_part"/>
    <origin xyz="0 0 0.145" rpy="0 0 0"/>
  </joint>

   <link name="sx_pillar">
    <visual>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
  </link>
   <joint name="sx_pillar_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="sx_pillar"/>
    <origin xyz="-0.055 0.05 0.05" rpy="0 0 0"/>
  </joint>


 <link name="dx_pillar">
    <visual>
      <geometry>
        <cylinder radius="0.008" length="0.1"/>
      </geometry>
      <material name="waterblue">
        <color rgba="0 1 0.5 1"/>
      </material>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
  </link>
   <joint name="dx_pillar_to_base" type="fixed">
    <parent link="base_link"/>
    <child link="dx_pillar"/>
    <origin xyz="-0.055 -0.05 0.05" rpy="0 0 0"/>
  </joint>



  <!-- Lidar montato sulla base -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="purple">
        <color rgba="1 0 1 1"/>
      </material>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </visual>
  </link>
  <joint name="base_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>



</robot>
